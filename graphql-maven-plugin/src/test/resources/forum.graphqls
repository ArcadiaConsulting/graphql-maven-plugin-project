schema {
    query: QueryType
}

type QueryType {
    boards: [Board]
    topics(board: Board!): [Topic]!
}


enum MemberType {
    ADMIN
    MODERATOR
    STANDARD
}

type Member {
    id: ID!
    name: String!
    alias: String
    email: String!
    type: MemberType
}

type Board {
    id: ID!
    name: String!
    publiclyAvailable: Boolean
    topics: [Topic]!
}

type Topic implements Message {
    id: ID!
    date: String!
    author: Member
    publiclyAvailable: Boolean
    nbPosts: Int
    title: String!
    content: String!
    posts: [Post]!
}

type Post implements Message {
    id: ID!
    date: String!
    author: Member
    publiclyAvailable: Boolean
    title: String!
    content: String!
}

